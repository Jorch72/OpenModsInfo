                <!-- Hello there, welcome to FAQ. Have fun. Also, who  reads HTML code of visited pages? NEEEEEEEEERD! -->
                <!-- generated on ${timestamp} -->
        </div>
        <div class="container">
            <div class="panel-group" id="accordion">

                % for category in categories:
                <div class="faqHeader" id="${category['id']}">${category['title']}</div>

                    % for entry in category['questions']:
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a class="accordion-toggle collapsed" data-toggle="collapse" data-parent="#accordion" id="${category['id']}-${loop.index}" href="#expand-${category['id']}-${loop.index}">${entry['question']}</a>
                            </h4>
                        </div>
                        <div id="expand-${category['id']}-${loop.index}" class="panel-collapse collapse">
                            <div class="panel-body">
                                ${entry['answer']}
                            </div>
                        </div>
                    </div>
                    % endfor # entry
                %endfor #category

                <!-- Me no speek english. Me sorry for errors. Xhejn. -->
            </div>
        </div>
        <br /><br /><br />

